---
const headingOptions = {
  h1: "text-9xl",
  h2: "text-5xl",
  h3: "text-4xl",
  h4: "text-3xl",
  h5: "text-2xl",
  h6: "text-xl",
};

type Props = {
  tagName: keyof typeof headingOptions;
  size: keyof typeof headingOptions;
  classes?: string;
};

const { tagName, size, ...rest } = Astro.props;
const Tag = tagName;
---

<Tag
  class:list={["leading-tight", "font-extrabold", headingOptions[size], rest]}
>
  <slot />
</Tag>

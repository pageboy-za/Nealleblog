---
const { isBordered, classList } = Astro.props;

const buttonStyles = {
    primary: "bg-blue-500 text-white",
    secondary: "bg-gray-200 text-gray-800",
};
const buttonVariants = {
    primary: "rounded-lg px-4 py-2",
    secondary: "rounded-md px-3 py-1",
};
const buttonSizes = {
    small: "text-sm",
    medium: "text-base",
    large: "text-lg",
};

const buttonClasses = {
    primary: `${buttonStyles.primary} ${buttonVariants.primary} ${buttonSizes.medium}`,
    secondary: `${buttonStyles.secondary} ${buttonVariants.secondary} ${buttonSizes.medium}`,
};
---

<button class:list={{}}>
    <slot />
</button>
